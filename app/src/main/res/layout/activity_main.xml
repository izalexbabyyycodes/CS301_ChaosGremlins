<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="272dp"
        android:layout_marginTop="48dp"
        android:rotationY="180"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/squirtle_png"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/inv_item1"
        android:layout_width="76dp"
        android:layout_height="67dp"
        android:layout_marginStart="468dp"
        android:layout_marginTop="632dp"
        android:rotationY="180"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pokeball"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/inv_item2"
        android:layout_width="73dp"
        android:layout_height="63dp"
        android:layout_marginStart="620dp"
        android:layout_marginTop="624dp"
        android:rotationY="180"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pokeball"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/inv_item3"
        android:layout_width="69dp"
        android:layout_height="53dp"
        android:layout_marginStart="752dp"
        android:layout_marginTop="624dp"
        android:rotationY="180"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pokeball"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/int_item4"
        android:layout_width="61dp"
        android:layout_height="48dp"
        android:layout_marginStart="912dp"
        android:layout_marginTop="616dp"
        android:rotationY="180"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pokeball"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/inv_item5"
        android:layout_width="59dp"
        android:layout_height="53dp"
        android:layout_marginStart="1028dp"
        android:layout_marginTop="612dp"
        android:rotationY="180"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pokeball"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/inv_item6"
        android:layout_width="58dp"
        android:layout_height="47dp"
        android:layout_marginStart="1144dp"
        android:layout_marginTop="432dp"
        android:rotationY="180"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@id/backgroundImage"
        app:layout_constraintTop_toTopOf="@id/backgroundImage"
        app:srcCompat="@drawable/pokeball"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/response1"
        android:layout_width="300dp"
        android:layout_height="76dp"
        android:layout_marginStart="408dp"
        android:layout_marginTop="196dp"
        android:rotation="-3"
        android:text="Response 1"
        app:layout_constraintBottom_toBottomOf="@id/backgroundImage"
        app:layout_constraintEnd_toEndOf="@id/backgroundImage"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="@id/backgroundImage"
        app:layout_constraintTop_toTopOf="@id/backgroundImage"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/response2"
        android:layout_width="300dp"
        android:layout_height="76dp"
        android:layout_marginStart="408dp"
        android:layout_marginTop="196dp"
        android:rotation="-3"
        android:text="Response 2"
        app:layout_constraintBottom_toBottomOf="@id/backgroundImage"
        app:layout_constraintEnd_toEndOf="@id/backgroundImage"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="@id/backgroundImage"
        app:layout_constraintTop_toTopOf="@id/backgroundImage"
        app:layout_constraintVertical_bias="0.344"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:importantForAccessibility="no"
        android:src="@drawable/counter_picture"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-30dp" />

    <TextView
        android:id="@+id/dialogue"
        android:layout_width="412dp"
        android:layout_height="143dp"
        android:text="This is example dialogue of the Character. This will be full of text that the Character replies with."
        app:layout_constraintBottom_toBottomOf="@id/backgroundImage"
        app:layout_constraintEnd_toEndOf="@id/backgroundImage"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintStart_toStartOf="@id/backgroundImage"
        app:layout_constraintTop_toTopOf="@id/backgroundImage"
        app:layout_constraintVertical_bias="0.495"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <TextView
        android:id="@+id/moneyCounter"
        android:layout_width="207dp"
        android:layout_height="89dp"
        android:gravity="center"
        android:text="$5.00"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@id/backgroundImage"
        app:layout_constraintEnd_toEndOf="@id/backgroundImage"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="@id/backgroundImage"
        app:layout_constraintTop_toTopOf="@id/backgroundImage"
        app:layout_constraintVertical_bias="0.143"
        tools:ignore="HardcodedText,TextSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>
